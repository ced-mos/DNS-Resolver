server {
  listen <PUBLIC_IPV4>:443 ssl http2;
  listen <PUBLIC_IPV6>:443 ssl http2;
  server_name res1.digitale-gesellschaft.ch;

  # TLS
  ssl_certificate /etc/letsencrypt/live/res2.digitale-gesellschaft.ch/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/res2.digitale-gesellschaft.ch/privkey.pem;
  include /etc/nginx/tls.conf;
  ssl_trusted_certificate /etc/letsencrypt/live/res2.digitale-gesellschaft.ch/chain.pem;
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 127.0.0.1 valid=300s;
  resolver_timeout 5s;

  add_header Strict-Transport-Security max-age=15768000;
	
  if ( $request_method !~ ^(GET|POST|HEAD)$ ) {
    return 501;
  }
}
